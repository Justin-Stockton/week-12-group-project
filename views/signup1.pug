include utils.pug

block content
    +validationErrorSummary(errors)
    form(action="/users/signup", method="post")
        input(type='hidden' name='_csrf' value=csrfToken)
        +textField('First Name', 'firstName', user.firstName, 'text')
        +textField('Last Name', 'lastName', user.lastName, 'text')
        +textField('Username', 'username', user.username, 'text')
        +textField('Email', 'email', user.email, 'text')
        +textField('Password', 'password', user.password, 'password')
        +textField('Confirm Password', 'confirmPassword', '', 'password')
        input(type='submit' value='Sign Up')