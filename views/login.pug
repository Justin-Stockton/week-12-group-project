html
  head
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;800;900&display=swap" rel="stylesheet")
    link(rel='stylesheet' href='/stylesheets/login.css')
    title GGs - #{title}
block content
  if errors
    div.error-list
      ul
      p The following errors were found:
        each error in errors
          li #{error}
  div.content-wrapper
    p.logo #[span G]Gs - #[span Good]Games
    p.logo#login Login
      form(action="/users/login", method="post")
        div.form-msg-login
          input(type='hidden' name='_csrf' value=csrfToken)
        div.email
          p.email Email:
        div.form-item
          input(type='text' id='email' name='email')
        div.password
          p.password Password:
          //- a(href="something").forgotpassword Forgot your password?
        div.form-item
          input(type='password' id='password' name='password')
        div.login-button
          input(type='submit' value='Login')
    div.signup-button
      a(href="/users/signup") Sign Up
