if !locals.authenticated
    html
        head
            link(rel="preconnect" href="https://fonts.googleapis.com")
            link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
            link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;800;900&display=swap" rel="stylesheet")
            link(rel='stylesheet' href='/stylesheets/game.css')
            title GGs - #{title}
        header
            nav
                p.logo #[span G]Gs - #[span Good]Games
                div(class="nav-bar-buttons")
                a.browsegames(href="/games") Browse Games
                a.login(href="/users/login") Log In
                a.signup(href="users/signup") Sign Up
                
        body
            h1.games Games
            each game in games
                a(href=`/games/${game.id}`)
                    img.game-imgs(src=game.gameImage)
        footer
            div.footer
                a.about-us(href="/about-us") #[span ABOUT] US
                p.goodgames-inc #[span © 2022 G]Gs - #[span Good]Games, Inc.

