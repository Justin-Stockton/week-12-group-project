extends layout.pug
block append head
  link(rel='stylesheet' href='/stylesheets/home.css')
block append header
  body
    h1.username Welcome #{user.username}!
    each rack in racks
      div
        a.game-rack-link(href="/home" style="color:black") #{rack.name}
    form(action=`/home`, method="post")
      input(type='hidden' name='_csrf' value=csrfToken)
      div.create-gamerack
      input(type='text' placeholder='New Gamerack Name' name="rackName")
      button Create Rack

block append footer
