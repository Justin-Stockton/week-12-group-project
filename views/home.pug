extends layout.pug
block append head
  link(rel='stylesheet' href='/stylesheets/home.css')
block append header
  body
    h1.username Welcome to #[span Good]Games #{user.username}!
    - if (racks.length === 0)
      h3 Create your personal game racks below
    form(action=`/home`, method="post")
      input(type='hidden' name='_csrf' value=csrfToken)
      div.create-gamerack
      input(type='text' placeholder='New Gamerack Name' name="rackName")
      button Create Game Rack
    each rack in racks
      form(action=`/home/${rack.id}/delete`, method="post")
        input(type='hidden' name='_csrf' value=csrfToken)
              //- input(type='hidden' name='rackId' value=rack.id)
        div
          a.game-rack-link(name="rackId" href=`/my-game-racks/${rack.id}` style="color:black") #{rack.name}
        div.delete-gamerack
        button Delete This Game Rack


block append footer
