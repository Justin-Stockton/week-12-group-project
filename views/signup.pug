html
  head
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700;800;900&display=swap" rel="stylesheet")
    link(rel='stylesheet' href='/stylesheets/signup.css')
    title GGs - #{title}
block content
    if errors
        div.error-list
            ul
            p The following errors were found:
                each error in errors
                    li #{error}

    div.content-wrapper
    p.logo #[span G]Gs - #[span Good]Games
    p.logo#login CREATE AN ACCOUNT
        form(action="/users/signup", method="post")
            div.form-msg-signup
                input(type='hidden' name='_csrf' value=csrfToken)
            div.first-name
                p.first-name First Name:
            div.form-item
                input(type='text' id='firstName' name='firstName' value=user.firstName)
            div.last-name
                p.last-name Last Name:
            div.form-item
                input(type='text' id='lastName' name='lastName' value=user.lastName)
            div.email
                p.email Email:
            div.form-item
                input(type='text' id='email' name='email' value=user.email)
            div.username
                p.username Username:
            div.form-item
                input(type='text' id='username' name='username' value=user.username)
            div.password
                p.password Password:
            div.form-item
                input(type='password' id='password' name='password')
            div.confirm-password
                p.confirm-password Confirm Password:
            div.form-item
                input(type='password' id='confirmPassword' name='confirmPassword')
            div
                button.form-button(type='submit') Create Account!
            div.already-have-account
                p.already-have-account Already have an account?
                a(href="/users/login")#login-text Login!
            p.goodgames-inc #[span Â© 2022 G]Gs - #[span Good]Games, Inc.
